@model PostViewModel
@{
    ViewBag.Title = "Edit";
}
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<h2>Create new blog post</h2>

<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Content</label>
            <textarea id="editor" asp-for="Body">  </textarea>

        </div>
        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image" />

        </div>
        <div>
            <label>Category</label>
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()"></select>
        </div>

        <input type="submit" value="Submit" />
    </form>
</div>

@section Scripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}