@model IEnumerable<Post>
@{
    ViewData["Title"] = "Home Page";
    ViewBag.Description = "Save the planet be VEGAN!";
    ViewBag.Keywords = "Food Animals Planet Recipe Interview Veganism";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/content/static/KoolVegan1.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:darkgreen">
                    Learn how to be vegan.
                    <a asp-controller="Home" asp-action="Posts" asp-route-category="Veganism" class="btn btn-default">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/content/static/KoolVegan2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:darkgreen">
                    There is powerful impact on the planet, Wanna know how?
                    <a asp-controller="Home" asp-action="Posts" asp-route-category="Planet" class="btn btn-default">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/content/static/KoolVegan3.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:darkgreen">
                    What to eat when you are vegan.
                    <a asp-controller="Home" asp-action="Posts" asp-route-category="Recipes" class="btn btn-default">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

